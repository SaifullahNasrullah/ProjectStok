@model ProjectStok.Models.Entity.TBLKategoriler
@{
    ViewBag.Title = "Kategori Guncelle";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h2>Kategori Guncelle</h2>

@using (Html.BeginForm("KategoriGuncelleKaydet", "Yonetici", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.KategoriID)
        @Html.TextBoxFor(m => m.KategoriID, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.KategoriAd)
        @Html.TextBoxFor(m => m.KategoriAd, new { @class = "form-control" })
    </div>

    <div>
        <button class="btn btn-warning">Güncellemeyi Kaydet</button>
    </div>
}